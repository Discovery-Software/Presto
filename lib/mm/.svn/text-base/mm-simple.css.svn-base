body {
	font: normal 90% "Helvetica Neue", Arial, Helvetica, Geneva, sans-serif;
	background: #eee url('http://bits.napkinware.com/texture.png');
}
body * {
	color: #353535;
	color: rgba(0,0,0,.7);
}

body>div {
	position: relative;
	width: 7in;
	padding: 1.5em;
	margin: auto;
}
h1 {
	text-align: center;
	margin: 0;
	text-shadow: -1px -1px 1px rgba(255,255,255,.5);
}
h3 {
	border-bottom: 4px solid rgba(255,255,255,.25);
	text-align: center;
}
form {
	width: 400px;
	margin: 1em auto;
}
form>label {
	overflow: auto;
	display: block;
}
form>label h4 {
	float: left;
	width: 23%; text-align: right;
	margin: 0; padding: 8px 0;
}
form>label textarea,
form>label input {
	float: right;
	padding: 4px; margin: 3px;
	width: 70%;
	font-size: 12pt; font-weight: bold;
	color: #555;
	border: 1px solid #999;
	-webkit-border-radius: 3px; -moz-border-radius: 3px;
}
form>label textarea {
	height: 10em;
	font: 10pt monospace;
}
form>label textarea.error,
form>label input.error {
	background-color: #fccfca;
}
form>label.error:after,
form>labe.error:after {
	content: '* Required field';
	position: absolute; right: 3em;
	font-weight: bold;
	padding-top: 6px;
}
form>label h4,
form>label input {
}
form>label.save {
	text-align: right;	
	font-weight: bold;
	margin-top: 1em;
}
a.close,
form>label.save button {
	background: #f6f8f9; /* old browsers */
	background: -moz-linear-gradient(top, #f6f8f9 0%, #e5ebee 50%, #d7dee3 51%, #f5f7f9 100%); /* firefox */	
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#f6f8f9), color-stop(50%,#e5ebee), color-stop(51%,#d7dee3), color-stop(100%,#f5f7f9)); /* webkit */	
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#f6f8f9', endColorstr='#f5f7f9',GradientType=0 ); /* ie */
	
	color: #444;
	font-size: 10pt; font-weight: bold;
	vertical-align: middle; text-decoration: none;
	padding: 3px 8px 4px;
	text-shadow: #ccc 1px 1px 1px; 
	cursor: pointer;
	-webkit-border-radius: 5px; -moz-border-radius: 5px;
	outline: none;	
	border: 1px solid #666;
}

form>label.save button:hover {
	text-shadow: #aaa 1px 1px 1px;
}
form>label.save button:active {
	padding: 4px 8px 3px;
}

#mm-thanks, #mm-error {
	width: 40%; margin: 1em auto;
}
a.close {
	display: none;
}

